---
import '../styles/globals.scss'
import Header from './Header.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body>
		<Header image="https://vanniaid.org/wp-content/uploads/2013/05/VanniAidBanner-May13.jpg" alt="Vanni Aid Banner Image" />
		<slot />
	</body>
</html>