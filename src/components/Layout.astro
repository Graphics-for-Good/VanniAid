---
import '../styles/globals.scss'
import Header from './Header.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body>
		<Header image="./assets/VanniAidBanner-May13.jpg" alt="Vanni Aid Banner Image" />
		<slot />
		<script>
			let pageName = location.pathname
			let links = document.querySelectorAll('.nav__btn')
			let currPageI = false
			links.forEach(function(l, i) {
				let lHref = l.href.split(location.host)[1]
				if (lHref === pageName) currPageI = i 
			});
			alert(currPageI == 0)
			if (!!currPageI || currPageI == 0) {
				let currPageEle = links[currPageI]
				currPageEle.classlist.add('page__selected')
			}
		</script>
		<script>
			javascript:(function () { var script = document.createElement('script'); script.src="//cdn.jsdelivr.net/npm/eruda"; document.body.appendChild(script); script.onload = function () { eruda.init() } })();
		</script>
	</body>
</html>