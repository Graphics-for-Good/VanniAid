---
const { pageName, title, description } = Astro.props
const pageNames = ['indes', 'contact', 'donate']
pageNames.forEach(function(n, i) {
    import `../styles/${n}.scss`
})
import '../styles/globals.scss'
import '../styles/globalContent.scss'

if (pageName === 'index') import '../styles/index.scss'
if (pageName === 'contact') import '../styles/contact.scss'
if (pageName === 'donate') import '../styles/donate.scss'

var theTitle = `<h1 class="page-title">${title}</h1>`
while(theTitle.includes('<>')) theTitle.replace('<>', '')
while (theTitle.includes('</>')) theTitle.replace('</>', '')
var theDesc = `<p class="page-description"><strong>${description}</strong></p>`
while(theDesc.includes('<>')) theDesc.replace('<>', '')
while (theDesc.includes('</>')) theDesc.replace('</>', '')
---
<main id="content">
    {theTitle}
    {theDesc}
    <section class="content">
        <slot />
    </section>
</main>